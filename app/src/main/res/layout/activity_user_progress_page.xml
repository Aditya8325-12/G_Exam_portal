<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_Progress_page">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app"
        android:id="@+id/Toolbar"/>



    <LinearLayout
        android:id="@+id/chapter"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/box"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="10dp"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:fontFamily="@font/ppm"
            android:src="@drawable/bookmark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter Tests"
                android:id="@+id/test_type"
                android:textSize="25dp"
                android:fontFamily="@font/ppm"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="chapter2 "
                android:fontFamily="@font/ppm"
                android:id="@+id/test_name"
                android:textSize="23sp"/>
        </LinearLayout>


    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="10dp"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Question :"
                android:id="@+id/total_question"
                android:textSize="22dp"
                android:fontFamily="@font/ppm"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Total Marks  :"
                android:id="@+id/total_marks"
                android:fontFamily="@font/ppm"
                android:textSize="23sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Marks  obtain:"
                android:fontFamily="@font/ppm"
                android:id="@+id/marks_obtain"
                android:textSize="23sp"/>
        </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/marks"
        android:text="You'r Score "
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:textSize="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/ppm"
        />










</LinearLayout>